{
  "compilerOptions": {
    "jsx": "react-jsx",
    "target": "ES2019",                                    
    "module": "ESNext",                               
    "moduleResolution": "node",                       
    "declaration": true,                             
    "declarationMap": true,                           
    "sourceMap": true,                                
    "outDir": "./dist",                                   
    "esModuleInterop": true,                             
    "forceConsistentCasingInFileNames": true,            
    "strict": true,                                      
    "skipLibCheck": true                                 
  },
  "exclude": ["./src/**/*.test.tsx", "./src/**/*.test.ts"]
}
